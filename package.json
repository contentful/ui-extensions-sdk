{
  "name": "contentful-ui-extensions-sdk",
  "description": "SDK to develop custom UI Extension for the Contentful Web App",
  "version": "3.16.2",
  "author": "Contentful GmbH",
  "license": "MIT",
  "main": "dist/cf-extension-api.js",
  "types": "./typings.d.ts",
  "files": [
    "dist/cf-extension-api.js",
    "dist/cf-extension.css",
    "typings.d.ts"
  ],
  "scripts": {
    "test": "ts-mocha 'test/unit/*.[jt]s'",
    "lint": "tsc -b && eslint '{lib,test}/**/*.{t,j}s'",
    "lint:fix": "eslint --fix lib/ test/",
    "build": "npm run typings && parcel build lib/index.ts --no-source-maps --out-file cf-extension-api.js --global contentfulExtension",
    "build:debug": "npm run typings && parcel build lib/index.ts --public-url '.' --out-file cf-extension-api.js --global contentfulExtension",
    "typings": "tsc -b typings.tsconfig.json && mv lib/types.d.ts typings.d.ts && cat module-declaration.d.ts >> typings.d.ts",
    "prepublishOnly": "npm run build",
    "size": "echo \"Gzipped, estimate: $(gzip -9 -c dist/cf-extension-api.js | wc -c) bytes\"",
    "integration": "ts-node test/integration",
    "integration:local": "ts-node test/integration/local",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --browser chrome",
    "clean-reports": "rm -rf cypress/reports",
    "merge-report": "mochawesome-merge ./test/cypress/reports/separate-reports/*.json > ./test/cypress/reports/full_report.json",
    "generate-report": "npx mochawesome-report-generator --reportDir test/cypress/reports test/cypress/reports/full_report.json"
  },
  "dependencies": {
    "es6-promise": "^4.2.8"
  },
  "devDependencies": {
    "@testing-library/cypress": "5.3.0",
    "@testing-library/dom": "6.12.2",
    "@types/chai-as-promised": "^7.1.2",
    "@types/jsdom": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "async-retry": "1.2.3",
    "babel-eslint": "10.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "contentful-management": "5.7.2",
    "cross-spawn": "6.0.5",
    "cypress": "^4.4.1",
    "cypress-plugin-retries": "^1.5.2",
    "dotenv": "8.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "8.0.1",
    "husky": "3.1.0",
    "jsdom": "^15.2.1",
    "lint-staged": "9.2.0",
    "mocha": "^7.1.0",
    "mochawesome": "^5.0.0",
    "mochawesome-merge": "^4.0.2",
    "mochawesome-report-generator": "^4.1.0",
    "nanoid": "2.1.8",
    "parcel-bundler": "^1.12.4",
    "prettier": "1.17.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.5.0",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
